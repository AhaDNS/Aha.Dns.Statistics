{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "DnsServerStatisticsStore": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "TableName": "DnsServerStatistics"
  },

  "DisplayableDnsServerSettings": {
    "DisplayableDnsServers": [
      {
        "ServerName": "all",
        "DisplayName": "All"
      },
      {
        "ServerName": "nl",
        "DisplayName": "Netherlands"
      },
      {
        "ServerName": "in",
        "DisplayName": "India"
      }
    ]
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] SourceContext:{SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Aha.Dns.Statistics.WebUI"
    }
  }
}
